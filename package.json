{
  "name": "sweet-nauta-server",
  "version": "0.4.43",
  "description": "Server for easy management of internet nauta session",
  "main": "src/app.js",
  "engines": {
    "node": "^13.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitea.casa.dylgran.com/yuniel/sweet-nauta-server.git"
  },
  "homepage": "https://gitea.casa.dylgran.com/yuniel/sweet-nauta-server",
  "bugs": {
    "url": "https://gitea.casa.dylgran.com/yuniel/sweet-nauta-server/issues"
  },
  "scripts": {
    "start": "node src/app.js",
    "test": "jest",
    "run-fake-server": "npx http-server --port 9000 __fakes__/nauta/",
    "lint": "eslint src/",
    "commit": "git add . && git-cz",
    "git-graph": "git log --oneline --graph",
    "validate": "run-s lint test",
    "release": "standard-version -a",
    "prerelease": "git checkout master && git pull origin master && npm i && run-s validate && git-authors-cli && git add .",
    "postrelease": "run-s release:*",
    "release:tags": "git push --follow-tags origin master",
    "release:tags-github": ": || git push --follow-tags github master"
  },
  "author": "yuniel",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.12.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "puppeteer": "^2.1.1",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@babel/core": ">=7.9.0",
    "@babel/plugin-proposal-class-properties": ">=7.8.3",
    "@babel/plugin-proposal-private-methods": ">=7.8.3",
    "@babel/preset-env": ">=7.9.0",
    "@commitlint/cli": ">=8.3.5",
    "@commitlint/config-conventional": ">=8.3.4",
    "@types/expect-puppeteer": ">=4.4.0",
    "@types/jest": ">=25.1.4",
    "@types/jest-environment-puppeteer": ">=4.3.1",
    "@types/puppeteer": ">=2.0.1",
    "babel-eslint": ">=10.1.0",
    "babel-jest": ">=25.2.3",
    "commitizen": ">=4.0.3",
    "cz-conventional-changelog": ">=3.1.0",
    "eslint": ">=6.8.0",
    "eslint-config-airbnb-base": ">=14.1.0",
    "eslint-plugin-import": ">=2.20.1",
    "eslint-plugin-jest": ">=23.8.2",
    "eslint-plugin-jsdoc": ">=22.1.0",
    "git-authors-cli": ">=1.0.24",
    "http-server": ">=0.12.1",
    "husky": ">=4.2.3",
    "jest": ">=25.2.3",
    "jest-puppeteer": ">=4.4.0",
    "lint-staged": ">=10.0.9",
    "npm-run-all": ">=4.1.5",
    "semver": "7.1.3",
    "standard-version": ">=7.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "testTimeout": 5000,
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/nocov/",
      "/etc/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
