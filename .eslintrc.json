{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jsdoc/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style"        
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "page": true,
        "browser": true,
        "context": true,
        "jestPuppeteer": true
    },
    "rules": {
        "comma-dangle": "off",
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "arrow-parens": "off"      
   },    
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "plugins": [
        "jsdoc",
        "jest"
    ],
    "parser": "babel-eslint"
}